# Database Configuration
DB_HOST=mariadb
DB_PORT=3306
DB_NAME=task_manager
DB_USER=yii2_user
DB_PASSWORD=yii2_pass
DB_ROOT_PASSWORD=root

# Application Configuration
YII_ENV=dev
YII_DEBUG=true

# Container Configuration
APP_PORT=8080
MYSQL_PORT=3306
REDIS_PORT=6379
PHPMYADMIN_PORT=8081

# Network Configuration
NETWORK_NAME=yii2-network
PROJECT_NAME=yii2-task-manager

# Container Names
APP_CONTAINER=yii2-app
MYSQL_CONTAINER=mariadb
REDIS_CONTAINER=yii2-redis

# Cache Configuration
CACHE_CLASS=yii\caching\FileCache
CACHE_DURATION=3600

# Session Configuration
SESSION_TIMEOUT=1440